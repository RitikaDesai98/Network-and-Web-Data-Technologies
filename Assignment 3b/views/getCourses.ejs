<!DOCTYPE html>
<html lang="en">
  <head>
    <title>CRUDy Book Browser</title>
    <meta name="description" content="A cool thing made with Glitch" />
    <link
      id="favicon"
      rel="icon"
      href="https://glitch.com/edit/favicon-app.ico"
      type="image/x-icon"
    />
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- import the webpage's stylesheet -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3" crossorigin="anonymous"></script>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.3.0/font/bootstrap-icons.css"
    />
  </head>

  <body class="container-fluid">
    <a href="/" class="btn btn-default">
      <i class="bi bi-chevron-left"></i>
    </a>
<h1>
      Courses 
    </h1>
    <% if (courses) { %>
    <table class="table">
      <tbody><tr><th>ID</th><th>Name</th><th>Instructor</th><th>Day</th><th>Time</th></tr>
        <% courses.forEach(function(course){ %>
        <tr>
          <td><a href = "/api/course/<%=course.course_id %>" ><%=course.course_id %></a></td>
          <td><%= course.name %></td>
          <td><%= course.instructor %></td>
          <td><%= course.meeting_day %></td>
          <td><%= course.meeting_time %></td>
          
        </tr>
        <% }); %>
      </tbody>
    </table>
    <% } else { %>
    <p>There are no students in the database.</p>
    <% } %>
  </body>
</html>

